import random

def guess_the_number():
    """
    Гра "Вгадай число".
    """
    secret_number = random.randint(1, 100)
    attempts = 0

    print("Я загадав число від 1 до 100. Спробуй вгадати!")

    while True:
        try:
            guess = int(input("Введіть ваше число: "))
            attempts += 1

            if guess < secret_number:
                print("Занадто низько!")
            elif guess > secret_number:
                print("Занадто високо!")
            else:
                print(f"Вітаємо! Ви вгадали число {secret_number} за {attempts} спроб.")
                break

        except ValueError:
            print("Будь ласка, введіть ціле число.")

if name == "main":
    guess_the_number()
